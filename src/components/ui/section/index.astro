---
import { section } from "./recipe";

const { title, subtitle, variant } = Astro.props;
const styles = section({ variant });
---

<div class={styles.container}>
	<div class={styles.section}>
		<h1 class={styles.title}>{title}</h1>
		{subtitle && <h2 class={styles.subtitle}>{subtitle}</h2>}

		<slot />
	</div>
</div>
