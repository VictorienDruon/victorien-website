---
import * as styles from "./styles";
import { Image } from "astro:assets";
import type { Visual } from "@/types/visual";

type Props = {
	title: string;
	period: string;
	description: string;
	logo: Visual;
};

const { title, period, description, logo } = Astro.props;
const { src, alt, width, height } = logo;
---

<div class={styles.container}>
	<div class={styles.card}>
		<Image
			src={src}
			alt={alt}
			width={width}
			height={height}
			draggable={false}
			class={styles.logo}
		/>

		<div class={styles.content}>
			<p class={styles.date}>{period}</p>

			<h3 class={styles.title}>{title}</h3>

			<p class={styles.description}>
				{description}
			</p>
		</div>
	</div>
</div>
