---
import * as styles from "./styles";
import Link from "@/components/ui/link/index.astro";
import Icon from "@/components/ui/icon/index.astro";
import { Image } from "astro:assets";
import type { Visual } from "@/types/visual";

type Props = {
	title: string;
	description: string;
	slug: string;
	backdrop: Visual;
};

const { title, description, slug, backdrop } = Astro.props;
const { src, alt, width, height } = backdrop;
---

<Link href={`/project/${slug}`} isText={false}>
	<div class={styles.container}>
		<Image
			src={src}
			alt={alt}
			width={width}
			height={height}
			draggable={false}
			class={styles.backdrop}
		/>

		<div>
			<div class={styles.header}>
				<h3 class={styles.title}>{title}</h3>
				<Icon name="Plus" size="lg" stroke-width="1.5" />
			</div>

			<p class={styles.description}>{description}</p>
		</div>
	</div>
</Link>
