---
import * as styles from "./styles";

type Props = {
	title: string;
	summary: string;
	publishedOn: Date;
};

const { title, summary, publishedOn } = Astro.props;

const publishedOnString = publishedOn.toLocaleDateString("en-US", {
	year: "numeric",
	month: "short",
	day: "numeric",
});
---

<div class={styles.container}>
	<h1 class={styles.title}>{title}</h1>

	<h2 class={styles.summary}>{summary}</h2>

	<p class={styles.informations}>{publishedOnString}</p>
</div>
